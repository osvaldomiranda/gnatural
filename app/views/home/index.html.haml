      .panel.panel-default
        .panel-heading
        .panel-body
          %h2 Comentario de análisis
          .row
            .col-md-12 
              %table.table.table-striped
                %thead
                  %tr
                    %th Fecha
                    %th Comentario
                    %th
                    %th
                    %th

                %tbody
                  %tr
                    %td= @comment.created_at.strftime("%d/%m/%Y")
                    %td= @comment.coment  



